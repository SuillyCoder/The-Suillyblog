<div class="formGroup">
   <label for = "title">Title</label>
    <input required value = "<%= article.title %>" type = "text" name = "title" id = "title" class = " form-control">

   <label for = "author" class = "mt-4">Indicate your Name</label>
    <input required value = "<%= article.author %>" type = "text" name = "author" id = "author" class = " form-control">

    <label for = "description" class = "mt-3">Article Summary</label>
    <textarea required name = "description" id = "description" class = "form-control">
    <%= article.description %>
    </textarea>

    <label for = "markdown" class = "mt-3">Write your content here</label>
    <textarea required name = "markdown" id = "markdown" class = "form-control mb-4">
    <%= article.markdown %>
    </textarea>
</div>

<a href="/" class = "text-decoration-none button btnEdit text-dark">Cancel</a>
<button type = "submit" class = "btn btn-secondary" >Publish Article</button>
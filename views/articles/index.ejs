<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BLOG</title>
</head>
<body class = "flexBGHome">
    <div class="container m-2">
        <h1 class = "pageTitle mt-3 mb-4 text-5xl display-2">THE SUILLYBLOG</h1>
        <h1 class = "cardText mt-3 mb-4 text-5xl display-4 text-muted">Write whatever, Read whatever</h1>
        <button class = "button btnWrite"><a class = "text-decoration-none text-dark" href="/articles/new">Write New Article</a></button>

        <% articles.forEach(article =>{ %>
        <div class="card mt-4 mb-4">
            <div class="cardBody p-3">
                <h4 class = "cardTitle mb-4"><%= article.title%></h4>
                <h6 class = "mb-4">By: <%= article.author%></h6>
               <div class = "creationDate text-muted mb-3"> 
                   <h6><%= article.createdAt.toLocaleDateString() %></h6>
                </div>
                <p class = "cardText mb-4"><%= article.description%></p>
                <a href = "articles/<%= article.slug %>" class = "text-decoration-none button btnRead text-dark">Read More</a>
                <a href = "articles/edit/<%= article.id %>" class = "text-decoration-none button btnEdit text-dark">Edit Article</a>
                <a href = "articles/confirm/<%= article.slug %>" class = "text-decoration-none button btnDelete text-light">Delete Article</a>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>

